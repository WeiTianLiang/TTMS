<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.wtl.ttms.Activity.LoginActivity"
    android:background="@drawable/yingyuan"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frontback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/changecolor"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <yanzhikai.textpath.SyncTextPathView
            android:id="@+id/first_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            app:textInCenter="true"
            app:text="TESTV"
            app:pathStrokeColor="#9f5353"
            app:paintStrokeColor="#ff0000"
            app:pathStrokeWidth="3dp"
            app:showPainter="true"
            app:duration="2000"
            app:textSize="100sp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp" />

        <EditText
            android:id="@+id/Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back"
            android:padding="13dp"
            android:hint="Account"
            android:textColorHint="#fff"/>

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back"
            android:layout_marginTop="10dp"
            android:padding="13dp"
            android:hint="Password"
            android:textColorHint="#fff"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16sp"
            android:gravity="center"
            android:elevation="3dp"
            android:background="@drawable/buttonchange"
            android:layout_marginTop="15dp"
            android:padding="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:text="忘记密码？"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#fff"
                android:layout_weight="1"
                android:text="注册"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
