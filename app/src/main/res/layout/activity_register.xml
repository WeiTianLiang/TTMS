<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/yingyuan"
    tools:context="com.example.wtl.ttms.Activity.RegisterActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/registerfront"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/changecolor"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <yanzhikai.textpath.SyncTextPathView
            android:id="@+id/register_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            app:textInCenter="true"
            app:text="注册"
            app:pathStrokeColor="#9f5353"
            app:paintStrokeColor="#ff0000"
            app:pathStrokeWidth="3dp"
            app:showPainter="true"
            app:duration="2000"
            app:textSize="60sp"
            android:layout_marginBottom="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="员工号:"
                android:textColor="#fff"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/register_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_back"
                android:padding="13dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textColor="#fff"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_back"
                android:padding="13dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="密码:"
                android:textColor="#fff"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/register_possword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_back"
                android:padding="13dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="重复密码:"
                android:textColor="#fff"
                android:textSize="22sp"/>

            <EditText
                android:id="@+id/repeat_pssword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_back"
                android:padding="13dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16sp"
            android:gravity="center"
            android:elevation="3dp"
            android:background="@drawable/buttonchange"
            android:layout_marginTop="40dp"
            android:padding="15dp" />

    </LinearLayout>

</LinearLayout>
